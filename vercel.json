{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/**": {
      "excludeFiles": "{etl/**,tests/**,frontend/**,.venv/**,node_modules/**,.git/**,.vercel/**,**/__pycache__/**,**/*.cache,**/*.md,**/.DS_Store,etl/regulatory_docs/**/*.pdf,etl/regulatory_docs/**/*.xlsx,etl/regulatory_docs/**/*.xls,etl/regulatory_docs/**/*.pptx,etl/regulatory_docs/**/*.docx,etl/uploaded_docs/**}"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/$1"
    }
  ]
}