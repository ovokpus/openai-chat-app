{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11",
        "installCommand": "pip install -r api/requirements.txt",
        "excludeFiles": "{.venv,.git,.env,__pycache__,*.pyc,tests,notebooks,regulatory_reporting,img,.vercel,node_modules,.next,*.cache,public,app,*.egg-info,dist,build}/**"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist",
        "excludeFiles": "{.git,node_modules,.next,*.cache,*.log,coverage,.env*}/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/app.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "frontend/dist/assets/$1"
    },
    {
      "src": "/vite.svg",
      "dest": "frontend/dist/vite.svg"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ],
  "env": {
    "PYTHONPATH": ".:api"
  }
} 