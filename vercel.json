{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/**": {
      "excludeFiles": [
        "etl/**",
        "tests/**", 
        "frontend/**",
        ".venv/**",
        "node_modules/**",
        ".git/**",
        ".vercel/**",
        "*.cache/**",
        "**/__pycache__/**",
        "**/*.md",
        "**/*.pdf",
        "**/*.xlsx",
        "**/*.xls",
        "**/*.pptx",
        "**/*.ppt",
        "**/*.docx",
        "**/*.doc",
        "**/.DS_Store"
      ]
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/$1"
    }
  ]
}