{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python@4.3.0",
      "config": {
        "includeFiles": [
          "api/**",
          "aimakerspace/**"
        ],
        "excludeFiles": [
          "**/.venv/**",
          "**/node_modules/**",
          "etl/**",
          "tests/**",
          "frontend/**",
          "*.md",
          "**/*.pdf",
          "**/*.xlsx",
          "**/*.xls", 
          "**/*.pptx",
          "**/*.ppt",
          "**/*.docx",
          "**/*.doc",
          "**/__pycache__/**",
          "**/.DS_Store",
          ".git/**",
          ".vercel/**"
        ]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/$1"
    }
  ]
}