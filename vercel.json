{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python@4.3.0",
      "config": {
        "includeFiles": [
          "api/**",
          "aimakerspace/**",
          "!etl/**",
          "!tests/**",
          "!.venv/**",
          "!**/*.pdf",
          "!**/*.xlsx",
          "!**/*.xls",
          "!**/*.pptx",
          "!**/*.ppt",
          "!**/*.docx",
          "!**/*.doc"
        ]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/$1"
    }
  ]
}